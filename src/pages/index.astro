<style>
	.task-list {
		font-family: "Poppins", sans-serif;

		height: 500px;
	}

	.task-list-header {
		font-family: "Fredoka", sans-serif;
	}

	/* scroll up and down automatically keyframes*/
	@keyframes scroll {
		0% {
			transform: translateY(0);
		}
		10% {
			transform: translateY(0);
		}
		90% {
			transform: translateY(calc(-100% + 435px));
		}
		100% {
			transform: translateY(calc(-100% + 435px));
		}
	}

	.task-list-header {
		height: 80px;
	}

	.task-list-body {
		animation: scroll 17s linear alternate infinite;
	}

	#widget-title {
		transition: all 1s ease-in-out;
	}

	.fade {
		animation: fade 1s ease-in-out;
	}

	@keyframes fade {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}
</style>

<script defer is:inline>
	const taskListTitles = ["Click here!", "!taskhelp"];

	const widgetTitle = document.querySelector("#widget-title");

	let index = 0;

	setInterval(() => {
		widgetTitle.classList.add("fade");
		setTimeout(() => {
			widgetTitle.classList.remove("fade");
		}, 1000);

		widgetTitle.textContent = taskListTitles[index];

		index++;

		if (index === taskListTitles.length) {
			index = 0;
		}
	}, 5000);
</script>
